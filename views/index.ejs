</div>

<img src="/img/homepage.jpg" alt="web developeer" class="hero-image" width="600" >

<section class="articles">

    <h2 class="articles__heading">Latest Post</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %>

            <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
            </li>  
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    
    <!-- &lt; = arrow sign -->

</section>